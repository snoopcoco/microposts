<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h2><%= @title %> (<%= @followings.count %>)</h2>
    <ol class="followings">
      <li><% @followings.each do |a| %>
        <%= gravatar_for(a, size:50) %> 
        <%= link_to a.name, user_path(a) %> <%#なぜ(a)でいくの? %>
      </li>
    <% end %>
    </ol>
  </div>
</div>