<h1>your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!--エラーメッセージの表示-->
      
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :place %>
      <%= f.text_field :place %>
      
      <%= f.submit "Edit profile", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>